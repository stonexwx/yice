
.container{
    padding: 0;
    margin-top: 20px;
    width: 90%;
    background-color: white;
    display: flex;
    flex-direction: column;
    margin: 10px auto;
    height: 100%;
}
.text-title{
    width: 100%;
    font-size: 2.2em;
    color: #333;
    display: flex;
    justify-content: flex-start;
}
.text-date,.text-author{
    width: 100%;
    display: flex;
    justify-content: flex-start;
    color: grey;
}
.text-content{
    margin-top: 20px;
 width: 95%;
 font-size: 1em;
 line-height: 1.8em;
 font-family: "等线";
 font-weight: 200;
}
.text-content text{
    width: 100%;
    word-break: break-all;
}
