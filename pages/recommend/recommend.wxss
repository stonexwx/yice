.container {
    width: 100%;
    padding: 0;
}

.page-body {
    width: 100%;
    height: 180px;
}

.banners {
    height: 180px;
}

page {
    background-color: #f0f0f0;
}

.goods-box {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    margin: 20px 0 10px 0;
}

.good {
    background-color: white;
    width: 40%;
    height: 180px;
    margin: 20px 10px;
    display: flex;
    border-radius: 10px;
    flex-direction: column;
    justify-content: center;
}

.good-img {
    display: flex;
    justify-content: center;
}

.good image {
    width: 90px;
    height: 90px;
}

.good-title {
    padding: 5px;
    width: 100%;
    color: #333;
    font-family: "等线";
    line-height: 1.3em;
    font-size: 0.8em;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    white-space: nowrap;
    word-break: break-all;
}
.good-price{
    padding: 5px;
    display: flex;
    color: grey;
    font-family: "等线";
    font-size: 0.7em;
    align-items: center;
    justify-content: space-between;
}