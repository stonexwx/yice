/* pages/search/search.wxss */
page{
    background-color: #ededed;
    font-family: '等线';
}
.bg{
    width: 100%;
    height: 100%;
    position: absolute;
}
.search-button{
    width: 10%;
    height: 70rpx;
    border-radius: 0 20rpx 20rpx 0;
    border: none;
    float: left;
    background: rgb(255, 255, 255)
}
.methods{
    margin-top: 20px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.sub-methods{
    width:80%;
    height: 150rpx;
    margin: 3rpx 37rpx 30rpx;
    padding: 10px;
    border-radius: 15rpx;
    background-color: rgba(255, 255, 255);display: flex;
    justify-content: center;
    flex-direction: column;
    position: relative;
}
.sub-methods text{
    margin-bottom: 5px;
}
.sub-methods>text:first-child{
    font-weight: bold;
    font-size: 1.3em;
}
.text-title,.text-date{
    font-size: 0.8em;
}
.text-date{
    position: absolute;
    bottom: 10px;
    right: 10px;

}