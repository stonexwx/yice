/**index.wxss**/
page {
  height: 100%;
  font-family: "等线";
  background-color: #ededed;
}

.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.background {
  background-color: #FFDE07;
  height: 250px;
  width: 100%;
  position: absolute;
  top: 0;
}

.content{
  position: absolute;
  top: 25%;
  width: 90%;
}

.background image {
  position: absolute;
  top: 0;
  width: 100%;
  height: 85%;
}

text {
  z-index: inherit;
}

button {
  border: 0 solid #f5e58a;
  background-color: #f5e58a;
  color: #fff;
  font-size: 120%;
  padding: 8px 16px;
  outline-width: 0;
  -webkit-appearance: none;
  box-shadow: 0 8px 17px rgba(150, 150, 150, 0.2);
}

.nav-person {
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  background-color: #ffffff;
  width: 80%;
  padding: 20px;
  font-family: "等线";
  font-weight: bold;
  font-size: 23px;
  z-index: 11;
  position: relative;
  border-radius: 10px;
  box-shadow: 0 8px 17px rgba(148, 148, 148, 0.2);
  margin-bottom: 20px;
}
.nav-person text{
  margin-left: 50px;
}
.nav-person::after {
  content: "点击开拉";
  font-size: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  background-color: #FFDE07;
  box-shadow: 0 8px 17px rgba(83, 83, 83, 0.2);
  opacity: 1;
  width: 30%;
  height: 100%;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  
}

.nav-banner {
  width: 100%;
  height: 150px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.banner-1{
  background-color: white;
  width: 43%;
  height: 90%;
  margin: 0 10px;
  display: flex;
  border-radius: 11px;
  font-weight: bold;
  box-shadow:rgba(155, 155, 155, 0.2);
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.banner-1 image{
  width: 80px;
  height: 80px;
}
.screen {
  margin: 20rpx 0;
  padding: 16px;
  -webkit-overflow-scrolling: touch;
}

.contact {
  position: relative;
  padding: 16px;
  background: rgba(255, 255, 255, 0.5);
  width: 100%;
  border-radius: 60rpx;
  height: 100%;
  box-sizing: border-box;
}

.name {
  height: 50px;
  font-size: 2em;
  font-weight: bold;
  color: #3a3a3a;
  text-align: center;
  margin: 5rpx 0;
}
.content-list{
  flex-direction: column;
  margin-top: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list-item{
  background-color: white;
  width: 90%;
  margin-bottom: 10px;
  padding: 4px;
  font-weight: bold;
  border-radius: 10px;
  height: 70px;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}
.list-item image{
  width: 60%;
  height: 90%;
}
.list {
  padding-top: 8px;
  padding-left: 32px;
}

.screen1 {
  overflow-y: scroll;
  padding: 0;
}

.screen1 .contact {
  margin: 16px;
  height: auto;
  width: auto;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.2);
}

.screen2-button {
  display: block;
  margin: 24px auto;
}

.paragraph {
  -webkit-transition: transform ease-in-out 300ms;
  transition: transform ease-in-out 300ms;
  -webkit-transform: scale(0.6);
  transform: scale(0.6);
}

.enter.paragraph {
  transform: none;
}

.navigation {
  background-color: #ffe240;
  width: 80%;
  font-size: 25px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80px;
  font-weight: bold;
  z-index: 11;
  border-radius: 30px;
}