/* pages/navigation/navigation.wxss */
page{
    font-family: "等线";
}
.map {
    width: 100%;
    height: 300px;
}
.container{
    padding:0;
}
.btn-area {
    margin: 10px;
    display: flex;
    flex-wrap: wrap;
    border: 1px solid #ccc;
}

button {
    display: inline-block;
    margin: 10px 5px;
}
.select{
    font-size: 20px;
    width: 100%;
    height: 45px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
.container>view:nth-child(odd){
    background-color: #ffffff;
}
.container>view:nth-child(even){
    background-color: #ffdc18;
}
.select image{
    width: 25px;
    height: 25px;
}